model {
    material wood.mat
    v -1.000000 0.000001 -1.000000
    vt 0 1
    v -1.000000 0.000001 1.000000
    vt 0 0
    v 1.000000 0.000001 1.000000
    vt 1 0
    v 1.000000 0.000001 -1.000000
    vt 1 1
    f 1 2 3 4
}

model {
    material light-dim.mat
    v -0.5 2.2 -0.5
    v -0.5 2.2 0.5
    v 0.5 2 -0.5
    v 0.5 2 0.5
    f 2 1 3 4
}

material liquid-blue.mat
fluid {
    grid 20 20 20
    cell_dimensions 0.05 0.05 0.05
    timestep 0.001

    flow incompressible
    xy_boundary free_slip
    yz_boundary free_slip
    zx_boundary free_slip
    viscosity 0.000005
    gravity 1

    initial_particles left uniform
    density 8

    initial_velocity zero
}

background_color 0.9 0.8 0.7

PerspectiveCamera {
  camera_position    < 3, 5, 5 >
  point_of_interest  < 0, 0, 0 > 
  up                 < 0, 1, 0 >
  angle              25
}
